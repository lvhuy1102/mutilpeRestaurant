<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen8">

    <RelativeLayout
        android:id="@+id/rlHeadler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@drawable/bg_view"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Note"
            android:textColor="@color/whitehuy"
            android:textSize="@dimen/dimen16sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edtInsTructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen4"
        android:background="@drawable/bg_text_view"
        android:gravity="top"
        android:hint="Input your note"
        android:inputType="textMultiLine"
        android:lines="9"
        android:minLines="9"
        android:padding="@dimen/dimen8"
        android:scrollHorizontally="true"
        android:textSize="@dimen/dimen14sp" />

    <RelativeLayout
        android:id="@+id/rlFooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_marginTop="@dimen/dimen16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen8"
        android:paddingRight="@dimen/dimen8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:gravity="center_horizontal"
                android:padding="@dimen/dimen4"
                android:text="save"
                android:textColor="@color/whitehuy"
                android:textSize="@dimen/dimen16sp" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:background="@drawable/bg_button"
                android:gravity="center_horizontal"
                android:padding="@dimen/dimen4"
                android:text="Cancel"
                android:textColor="@color/whitehuy"
                android:textSize="@dimen/dimen16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>