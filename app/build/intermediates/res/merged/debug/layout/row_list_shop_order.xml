<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRowShopCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_shop_height"
        android:layout_marginBottom="@dimen/dimen_1x"
        android:background="@drawable/bg_custom_spinner"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/row_shop_height"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_1x" >

            <ProgressBar
                android:id="@+id/progess"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lblShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_05x"
                    android:singleLine="true"
                    android:text="Shop 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_1x"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05x"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblTitleAdding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:textColor="@color/blue_search"
                    android:textSize="@dimen/text_size_normal_1x" />

                <TextView
                    android:id="@+id/lblFoodNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:text="2 menus"
                    android:textColor="@color/blue_search"
                    android:textSize="@dimen/text_size_normal_1x" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05x"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAT : 10%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />

                <TextView
                    android:id="@+id/lblShipping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_weight="1"
                    android:text="Shipping : 10$"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>