<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundnew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_7x"
            android:background="@color/primary_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/dimen_5x"
                android:layout_height="@dimen/dimen_5x"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2x"
                android:text="@string/account"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_layout_radius"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btnMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgMyAcc"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_myaccnew" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="@string/myAccount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_1x"
                        android:src="@drawable/ic_kengang" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnHistoryOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHistory"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_historynew" />

                        <TextView
                            android:id="@+id/lblOrderHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="@string/history"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_1x"
                        android:src="@drawable/ic_kengang" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnManageShops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgManageShops"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_register_shop_owner" />

                        <TextView
                            android:id="@+id/lblManageShops"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="@string/manage_shops"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_1x"
                        android:src="@drawable/ic_kengang" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnRegisterShopOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgRegisterShopOwner"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_register_shop_owner" />

                        <TextView
                            android:id="@+id/lblRegisterShopOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="@string/register_shop_owner"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_1x"
                        android:src="@drawable/ic_kengang" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgFeedBack"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_fedbacknew" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="@string/feedBack"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_1x"
                        android:src="@drawable/ic_kengang" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_1x"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLogout"
                            android:layout_width="@dimen/dimen_9x"
                            android:layout_height="@dimen/dimen_9x"
                            android:src="@drawable/ic_logoutnew" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2x"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal_1x" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>