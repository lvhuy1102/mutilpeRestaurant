<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_backgroundnew"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_7x"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/dimen_5x"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginBottom="@dimen/dimen_1x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_2x"
            android:background="@drawable/custom_layout_radius"
            android:ems="10"
            android:hint="@string/search_key"
            android:padding="@dimen/dimen_1x">

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1x"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnCategories"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_5x"
                android:layout_weight="1.0"
                android:layout_marginRight="@dimen/dimen_1x"
                android:background="@drawable/bg_custom_spinner"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spnCity"
                android:layout_width="0.0dp"
                android:layout_height="@dimen/dimen_5x"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_weight="1.0"
                android:background="@drawable/bg_custom_spinner" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_5x"
            android:layout_margin="@dimen/dimen_1x"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_1x"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnSelectMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_not_select_left"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgticMenu"
                        android:layout_width="@dimen/dimen_1x"
                        android:layout_height="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_05x"
                        android:src="@drawable/ic_tic"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/lblMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/menu"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSelectShop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_select_right"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgticShop"
                        android:layout_width="@dimen/dimen_1x"
                        android:layout_height="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_05x"
                        android:src="@drawable/ic_tic" />

                    <TextView
                        android:id="@+id/lblShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shop"
                        android:textColor="@color/cl_white"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnSelectAll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_not_select_left"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgTickAll"
                        android:layout_width="@dimen/dimen_1x"
                        android:layout_height="@dimen/dimen_1x"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_tic"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/lblAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSelectOpen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_select_right"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgTickOpen"
                        android:layout_width="@dimen/dimen_1x"
                        android:layout_height="@dimen/dimen_1x"
                        android:layout_marginRight="@dimen/dimen_05x"
                        android:src="@drawable/ic_tic" />

                    <TextView
                        android:id="@+id/lblOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open"
                        android:textColor="@color/cl_white"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1x"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/lbl_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:text="All"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05x">

                <TextView
                    android:id="@+id/lbl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/all"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_normal" />

                <SeekBar
                    android:id="@+id/skb_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:layout_toLeftOf="@+id/lbl_right"
                    android:layout_toRightOf="@+id/lbl_left"
                    android:max="10"
                    android:paddingLeft="@dimen/dimen_1x"
                    android:paddingRight="@dimen/dimen_1x"
                    android:progress="0"
                    android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                    android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light" />

                <TextView
                    android:id="@+id/lbl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/max_distance"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1x"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnSortBy"
                android:layout_width="0.0dp"
                android:layout_height="@dimen/dimen_5x"
                android:layout_weight="1.0"
                android:layout_marginRight="@dimen/dimen_1x"
                android:background="@drawable/bg_custom_spinner"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spnSortType"
                android:layout_width="0.0dp"
                android:layout_height="@dimen/dimen_5x"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_weight="1.0"
                android:background="@drawable/bg_custom_spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_4x"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_1x"
                android:background="@drawable/bg_button"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_1x"
                android:paddingLeft="@dimen/dimen_3x"
                android:paddingRight="@dimen/dimen_3x"
                android:paddingTop="@dimen/dimen_1x"
                android:text="@string/search"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_size_normal_3x" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>