<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSubmitOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_7x"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_5x"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:text="@string/orderDetails"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen8"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen30"
                android:gravity="center_vertical"
                android:text="OrderSumary"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginBottom="@dimen/dimen8"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="items :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Sumary"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginBottom="@dimen/dimen8"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="(*)"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen8"
                android:background="@drawable/bg_text_view"
                android:padding="@dimen/dimen8"
                android:textSize="@dimen/dimen14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="(*)"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen8"
                android:background="@drawable/bg_text_view"
                android:inputType="phone"
                android:padding="@dimen/dimen8"
                android:textSize="@dimen/dimen14sp" />

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:hint="Date"
                    android:layout_marginRight="@dimen/dimen8"
                    android:layout_weight="1"
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text_view"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />
                <TextView
                    android:layout_marginLeft="@dimen/dimen8"
                    android:layout_weight="1"
                    android:hint="Time"
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:inputType="phone"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHidden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text=" (*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:inputType="text"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen8"
                        android:text=" (*)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:background="@drawable/bg_text_view"
                    android:inputType="text"
                    android:padding="@dimen/dimen8"
                    android:textSize="@dimen/dimen14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPaymentMethodTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text="payment_method_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:text=" (*)"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_1x"
                android:background="@drawable/bg_white_edittext"
                android:entries="@array/payment_method"
                android:padding="@dimen/dimen_1x"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_size_normal" />


            <TextView
                android:id="@+id/btnSubmitOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen8"
                android:background="@drawable/bg_button"
                android:padding="@dimen/dimen8"
                android:text="order_now"
                android:textColor="@color/whitehuy"
                android:textSize="@dimen/dimen14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

