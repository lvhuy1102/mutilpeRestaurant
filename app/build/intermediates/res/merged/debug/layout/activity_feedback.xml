<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundnew"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_7x"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_5x"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@drawable/ic_backs" />

        <TextView
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_1x"
            android:text="@string/title"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/edtTitleFB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5x"
            android:background="@drawable/custom_layout_radius"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="@dimen/dimen_1x"
            android:textSize="@dimen/text_size_normal">

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_1x"
            android:paddingTop="@dimen/dimen_1x"
            android:text="@string/type"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_radius"
            android:padding="@dimen/dimen_1x"
            android:text="@string/report"
            android:textSize="@dimen/text_size_normal_3x" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_1x"
            android:paddingTop="@dimen/dimen_1x"
            android:text="@string/Des"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/edtDesFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_radius"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="6"
            android:padding="@dimen/dimen_1x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1x"
            android:gravity="center">

            <com.hcpt.multirestaurants.widget.AutoBgButton
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:paddingBottom="@dimen/dimen_1x"
                android:paddingLeft="@dimen/dimen_5x"
                android:paddingRight="@dimen/dimen_5x"
                android:paddingTop="@dimen/dimen_1x"
                android:text="@string/send"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_size_normal_3x" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>