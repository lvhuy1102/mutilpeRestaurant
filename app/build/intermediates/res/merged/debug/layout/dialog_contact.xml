<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_1x">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/contact_information"
        android:textColor="@color/blue_search"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lladdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_1x">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address_two"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/blue_type_stop_result"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llfacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_1x">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/facebook"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/blue_type_stop_result"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lltwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_1x">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/twitter"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/blue_type_stop_result"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_1x">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/email"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/blue_type_stop_result"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llliveChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_1x">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/livechat"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/liveChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_normal_1x"
            android:textColor="@color/blue_type_stop_result"/>
    </LinearLayout>

</LinearLayout>