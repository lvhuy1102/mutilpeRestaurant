<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeadler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_view"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Topping"
            android:textColor="@color/whitehuy"
            android:textSize="@dimen/dimen14sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvGone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen16"
        android:gravity="center"
        android:text="No have more Data"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclToppings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:drawSelectorOnTop="false"
        android:padding="@dimen/dimen8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/rlFooter"
        android:background="@color/red" />

    <RelativeLayout
        android:id="@+id/rlFooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen8"
        android:paddingRight="@dimen/dimen8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:gravity="center_horizontal"
                android:padding="@dimen/dimen4"
                android:text="Save"
                android:textColor="@color/whitehuy"
                android:textSize="@dimen/dimen14sp" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:background="@drawable/bg_button"
                android:gravity="center_horizontal"
                android:padding="@dimen/dimen4"
                android:text="Cancel"
                android:textColor="@color/whitehuy"
                android:textSize="@dimen/dimen14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>