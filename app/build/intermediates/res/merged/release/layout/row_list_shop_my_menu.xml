<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRowShopCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_shop_height"
        android:layout_marginBottom="@dimen/dimen_1x"
        android:background="@drawable/bg_custom_spinner"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/row_shop_height"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_1x" >

            <ProgressBar
                android:id="@+id/progess"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <TextView
                    android:id="@+id/lblShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_x3x"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Shop 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_1x"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/dimen_x3x"
                    android:layout_height="@dimen/dimen_x3x"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimen_05x"
                    android:background="@drawable/ic_delete" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAT: 10%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />

                <TextView
                    android:id="@+id/lblShipping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_weight="1"
                    android:text="Shipping: 10$"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_1x" >

                <!--
                     <TextView
                    android:id="@+id/lblTitleAdding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:textColor="@color/blue_search"
                    android:textSize="@dimen/text_normal_size" />
                -->

                <TextView
                    android:id="@+id/lblFoodNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="2 menus"
                    android:textColor="@color/blue_search"
                    android:textSize="@dimen/text_size_normal_1x" />

                <TextView
                    android:id="@+id/lblTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_05x"
                    android:text="$30"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_normal_1x" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>